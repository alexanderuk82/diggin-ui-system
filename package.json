{
  "name": "diggin-ui-system",
  "version": "1.0.0",
  "description": "Complete Design System from Figma to Storybook using React, TypeScript, and Atomic Design",
  "main": "index.js",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsc && vite build",
    "build-storybook": "storybook build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:a11y": "jest --testPathPattern=a11y",
    "clean": "rimraf dist storybook-static coverage",
    "prepare": "husky install"
  },
  "keywords": ["design-system", "react", "typescript", "storybook", "atomic-design", "accessibility"],
  "author": "Alexander",
  "license": "MIT",
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^9.1.5",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^9.1.5",
    "@storybook/react": "^9.1.5",
    "@storybook/react-vite": "^9.1.5",
    "@storybook/testing-library": "^0.2.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.4.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "axe-core": "^4.10.3",
    "chromatic": "^13.1.4",
    "jest": "^30.1.3",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.0",
    "storybook": "^9.1.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
