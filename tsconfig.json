{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/tokens/*": ["src/tokens/*"],
      "@/utils/*": ["src/utils/*"],
      "@/stories/*": ["src/stories/*"]
    }
  },
  "include": [
    "src/**/*",
    "**/*.stories.*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static"
  ]
}
